<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/emvtransaction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.emvtransaction.EmvTransactionFragment">

    <EditText
            android:id="@+id/txnAmountEmv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="@string/zero_dollars"
            android:inputType="numberDecimal"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:autofillHints=""/>
    <Button
            android:text="@string/txn_button_pay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/submitEmvTxn"
            app:layout_constraintTop_toBottomOf="@+id/txnAmountEmv"
            app:layout_constraintStart_toStartOf="@+id/txnAmountEmv"
            app:layout_constraintEnd_toEndOf="@+id/txnAmountEmv"/>
</androidx.constraintlayout.widget.ConstraintLayout>
